<Window x:Class="RealTimeChat.Chat.ImageViewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealTimeChat.Chat"
        mc:Ignorable="d"
        Title="ImageView" SizeToContent="WidthAndHeight">
    <Grid>
        <Image Margin="10"  Source="{Binding FileData}" Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
